#!/usr/bin/python2.7
import os
import time
from sys import *
from openfile import *
from lex import *
from parser import *

symbols = {}

def run_shell():
    try:
        print("Evreka 0.3v GPL 3.0v(C) \n")
        while True:
            data = raw_input("<?>: ") + "<EOF>"
            toks = lex(data)
            parser(toks)
            ##print(symbols)
    except:
        print("\n")
        exit()

def run_file():
    data = openfile(argv[1])
    toks = lex(data)
    parser(toks)

if len(argv) == 2:
    run_file()
elif len(argv) == 1:
    run_shell()
else:
    print("HATA: COK FAZLA ARGUMAN GIRILDI")
